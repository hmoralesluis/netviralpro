{% extends 'FrontBundle::layout.html.twig' %}

{% block title %}NETVIRALPRO{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <div class="content">
                <div class="col-md-8">
                    <div id="normalportfolio" class="row portfolio four-col-portfolio-wrapper">
                        <div class="gallery-item item-w1 item-h1 cat1">

                            <h1 class="title"><a href="#">{% trans %}Thunder Marketing{% endtrans %}</a></h1>
                            <hr class="titlehr">

                            <small><a href="#">{% trans %}Mejora tus conocimientos de marketing con los mejores especialistas.{% endtrans %}</a></small>

                            <div class="media-element">
                                <div>
                                    <img src="{{ asset('bundles/front/img/2J.png') }}" alt=""
                                         class="img-responsive">
                                </div>
                            </div><!-- end media -->

                            <div class="gallery-desc-full big-gallery">
                                <p>{% trans %}<strong>Thunder Marketing</strong> es una colección de archivos mediante los cuales adquirirá conocimientos de marketing online llevando su negocio al máximo nivel. Estos documentos han sido creados por personas que han conseguido tener éxito en sus negocios online. Mensualmente, se publicarán nuevos documentos para que pueda tener una formación continuada. Además de esto, tras la adquisición de este producto tendrá acceso a las distintas conferencias de marketing que darán nuestros especialistas.{% endtrans %} </p>
                                <a href="#" class="btn btn-primary">{% trans %}Registrate Ahora{% endtrans %}</a>
                            </div>
                        </div><!-- item -->
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="col-sm-12 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                        <div class="pricing-box-09 white-style">
                            <div class="pricing-box-09-head">
                                <div class="ribbon-wrapper-pt1">
                                    <div class="ribbon-pt1">{% trans %}Anual{% endtrans %}</div>
                                </div>
                                <h3><sup>$</sup>69.95 USD</h3>
                                <h4>{% trans %}Una vez te registres a Thunder Marketing, tendrá acceso a:{% endtrans %}</h4>
                            </div>
                            <!-- end pricing-box-09-head -->

                            <div class="pricing-box-09-body">
                                <ul>
                                    <li><p>{% trans %}Archivos que le ayudarán a mejorar sus conocimientos de marketing y negocios online.</p>{% endtrans %}</li>
                                    <li><p>{% trans %}Acceso a las distintas conferencias que darán nuestros especialistas en marketing  para que pueda tener éxito en su negocio online.</p>{% endtrans %}</li>
                                </ul>
                            </div>
                            <!-- end pricing-box-09-body -->

                            <div class="pricing-box-09-foot">
                                <a href="#" class="btn btn-primary btn-block">{% trans %}Ordenalo Ahora{% endtrans %}</a>
                            </div>
                            <!-- end pricing-box-09-foot -->
                        </div>
                        <!-- end pricing-box-09 -->
                    </div>
                </div>
            </div><!-- end content -->
        </div><!-- end container -->
    </section><!-- end section -->

    <section class="section messagesection biggermessage colorrizedmessage color10">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h3>{% trans %}¡ ADQUIERA ESTE PRODUCTO POR SÓLO 69.95 USD ANUALES !{% endtrans %}</h3>
                </div>
                <div class="col-md-4 text-center">
                    <a href="#" class="btn btn-primary btn-lg border-radius"><i class="fa fa-check"></i>{% trans %} Comprar{% endtrans %}</a>
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
    </section><!-- end section -->

{% endblock %}